k = 0
rows = 0
list_num = [1,2,3,4,5,6,7,8]
rows = input(str("Height: "))
print()
if int(rows) not in list_num:
    print("Height must be 1-8.")  
if int(rows) in list_num:
        k = (2*int(rows)) - 2
for i in range(0, int(rows)):
    for j in range(0, k):
        print(end=" ")
    k = k - 2
    for j in range(0, (i + 1)):
        print("# ", end="")
    print("")
    

